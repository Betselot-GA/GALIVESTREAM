<%- include ("./partials/header"); %>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background-color: rgba(6, 12, 34, 0.8);">
      <h1 class="text-center mb-3 text-white"><i class="fas fa-sign-in-alt" style="color: whitesmoke;"></i>  Login</h1>
      <%- include ("./partials/messages"); %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" class="text-white">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password" class="text-white">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-info btn-block" style="background-color: rgba(6, 12, 34, 0.8);">Login</button>
      </form>
      <p class="lead mt-4 text-white">
        No Account? <a href="/users/register" style="color:#d45500 ;">Register</a>
      </p>
    </div>
  </div>
</div>
